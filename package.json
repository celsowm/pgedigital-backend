{
  "name": "pgedigital-backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc -p tsconfig.json",
    "prestart": "npm run build",
    "check": "tsc -p tsconfig.json --noEmit",
    "adorn:build": "adorn-api build -p tsconfig.json --output .adorn --if-stale",
    "adorn:clean": "adorn-api clean --output .adorn",
    "gen:entities": "node scripts/gen-entities.mjs"
  },
  "dependencies": {
    "adorn-api": "file:../adorn-api",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "metal-orm": "^1.0.66",
    "tedious": "^16.7.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "tsx": "^4.7.1",
    "typescript": "^5.6.3"
  }
}
